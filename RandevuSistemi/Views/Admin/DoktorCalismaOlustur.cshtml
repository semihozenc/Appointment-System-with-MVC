@model RandevuSistemi.Models.Entities.Doktor

<h2>Çalışma Saati Oluştur - @Model.AdSoyad</h2>

<form method="post" asp-action="CalismaSaatiOlustur">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="calismaTarihi">Çalışma Tarihi:</label>
        <input type="date" id="calismaTarihi" name="CalismaTarihi" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
    </div>

    <div class="form-group">
        <label for="calismaSaati">Çalışma Saati:</label>
        <select id="calismaSaati" name="CalismaSaati" class="form-control">
            @{
                DateTime baslangicSaati = DateTime.Today.AddHours(9); // Başlangıç saati belirleyin (örneğin, 09:00)
                DateTime bitisSaati = DateTime.Today.AddHours(17); // Bitiş saati belirleyin (örneğin, 18:00)
                TimeSpan aralik = TimeSpan.FromMinutes(30); // 30 dakikalık aralığı belirleyin

                for (DateTime saat = baslangicSaati; saat <= bitisSaati; saat = saat.Add(aralik))
                {
                    <option value="@saat">@saat.ToString("HH:mm")</option>
                }
            }
        </select>
    </div>

    <input type="hidden" asp-for="Id" value="@Model.Id" /> <!-- Kullanıcı ID'sini gizli input olarak ekleyin -->

    <button type="submit" class="btn btn-primary">Çalışma Saati Oluştur</button>
</form>